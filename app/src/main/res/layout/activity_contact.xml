<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/background">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Contact Information"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="italic"
        android:id="@+id/appAboutTextTitle"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="If you wish to contact me regarding this application or any bugs you find, please email me at anduinmooney@gmail.com"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="italic"
        android:id="@+id/appAboutTextView"
        android:padding="25sp"
        />


</RelativeLayout>